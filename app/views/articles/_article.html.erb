<div id="<%= dom_id article %>">
  <p class="my-5">
    <strong class="block font-medium mb-1 has-text-white">Title:</strong>
    <span class = " has-text-white"><%= article.title %></span>
  </p>

  <p class="my-5  has-text-white">
    <strong class="block font-medium mb-1  has-text-white">Content:</strong>
    <%= article.content %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this article", article, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium  has-text-white" %>
    <%= link_to 'Edit this article', edit_article_path(article), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium  has-text-white" %>
    <hr class="mt-6">
  <% end %>
</div>
